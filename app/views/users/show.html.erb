<%= render "shared/header"%>

<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">メール</th>
            <td class="table__col2"><%= @user.email %></td>
          </tr>
          <tr>
            <th class="table__col1">生年月日</th>
            <td class="table__col2"><%= @user.birthday %></td>
          </tr>
          <tr>
            <th class="table__col1">テストを受けた回数</th>
            <td class="table__col2"><%= @user.test_attempts %></td>
          </tr>
        </tbody>
      </table>
      <p><%= link_to "編集/プロフィール写真追加", edit_user_path(current_user) %></p>
    </div>
  </div>
</div>