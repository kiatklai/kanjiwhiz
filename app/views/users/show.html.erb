<%= render "shared/header"%>

<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんのマイページ"%>
      </h2>
      <%= image_tag @user.profile_picture.variant(resize: '200x200'), class: 'profile-picture' if @user.profile_picture.attached? %>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">なまえ</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">メール</th>
            <td class="table__col2"><%= @user.email %></td>
          </tr>
          <tr>
            <th class="table__col1">せいねんがっぴ</th>
            <td class="table__col2"><%= @user.birthday %></td>
          </tr>
          <tr>
            <th class="table__col1">テストをうけたかいすう</th>
            <td class="table__col2"><%= @user.test_attempts %></td>
          </tr>
          <tr>
            <th class="table__col1">へいきんてんすう</th>
            <td class="table__col2"><%= @user.average_score %></td>
          </tr>
        </tbody>
      </table>
      <p><%= link_to "編集/プロフィール写真追加", edit_user_path(@user.id) %></p>
    </div>
  </div>
</div>

<%= render "shared/footer"%>