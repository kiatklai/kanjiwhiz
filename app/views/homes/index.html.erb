<%= render "shared/header"%>

  <div class="row">
    <div class="col-lg-8 m-auto">
      <div class="carousel slide" id="slide1" data-bs-ride="carousel">
        <ol class="carousel-indicators">
          <button class="active" data-bs-target="#slide1" data-bs-slide-to="0"></button>
          <button data-bs-target="#slide1" data-bs-slide-to="1"></button>
