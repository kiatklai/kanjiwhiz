<%= render "shared/header"%>

<div class="contents row">
  <div class="container">
    <h2>作成する</h2>
    <%= form_with(model: @question, local: true) do |form| %>
      <%= render 'shared/error_messages', model: form.object %>
      <%= form.text_field :question_text, placeholder: "漢字" %>
      <%= form.text_field :correct_answer, placeholder: "読み方(ひらがな)" %>
      <%= form.submit "Add", class: "submit" %>
    <% end %>
  </div>
</div>

<%= render "shared/footer"%>