<%= render "shared/header"%>

<div class="contents">
  <div class="container">
    <div class="error-alert">
      <p class='error-message'><%=@error_message%></p>
    </div>
    <%= form_for :user_answer, url: { action: :answer }, method: :post do |f| %>
      <p>Question <%= @question_number + 1 %>:</p>
      <h1><%= @current_question.question_text %></h1>

      <div class="form-group">
        <%= f.label :user_answer, "Your Answer" %>
        <%= f.text_field :user_answer, class: "form-control" %>
        <%= f.submit "解答", class: "submit" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer"%>